<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuReposo">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textView7"
        android:layout_width="415dp"
        android:layout_height="34dp"
        android:background="#B8F3EA"
        android:text="MENU DE REPOSO"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005" />

    <com.google.android.material.chip.ChipGroup
        android:layout_width="334dp"
        android:layout_height="278dp"
        android:layout_marginTop="12dp"
        android:background="#E8F1F1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccione el tipo de reposo"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="POR MATERNIDAD"
            android:textAlignment="viewStart"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnPaternidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="POR PATERNIDAD"
            android:textAlignment="viewStart"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnPOperatorio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="POST OPERATORIO"
            android:textAlignment="viewStart"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnEnfermedad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="POR ENFERMEDAD"
            android:textAlignment="viewStart"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnAccidente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="POR ACCIDENTE"
            android:textAlignment="viewStart"
            android:textSize="18sp" />
    </com.google.android.material.chip.ChipGroup>
</androidx.constraintlayout.widget.ConstraintLayout>